@model MyApartmentModel

@{
    ViewBag.Title = "My Apartments";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h4>My Added Houses</h4>

@if (!Model.AddedApartments.Any())
{
        <h2 class="text-center">You have no added apartments yet!</h2>
}

<div class="row">
    @foreach (var apartment in Model.AddedApartments)
    {
        @await Html.PartialAsync("~/Views/Shared/_ApartmentsPartial.cshtml", apartment)
    }
</div>

<h4>My Rented Apartments</h4>

@if (!Model.RentedApartments.Any())
{
        <h2 class="text-center">You have no rented apartments yet!</h2>
}

<div class="row">
    @foreach (var apartment in Model.RentedApartments)
    {
        @await Html.PartialAsync("~/Views/Shared/_ApartmentsPartial.cshtml", apartment)
    }
</div>
